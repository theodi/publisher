<div class="page-header">
  <h1>
    <%= "New attachment" %>
  </h1>
</div>

<%= semantic_form_for @attachment, :url => admin_attachments_path, :as => :attachment do |f| %>
  
  <%= f.input :file,
              :as => :file %>
  
  <%= render :partial => 'meta', :locals => { :f => f }%>
  
  <%= f.action :submit, :button_html => { :class => "btn btn-primary" } %>
  
<% end %>

<% content_for :page_title, "New attachment" %>