<div class="page-header">
  <h1>
    <%= "Editing #{@attachment.file.name}" %>
  </h1>
</div>

<div class="well">
  <%= image_tag @attachment.file.file_url, width: 200 %>
</div>

<%= semantic_form_for @attachment, :url => admin_attachment_path(@attachment), :as => :attachment do |f| %>
  
  <%= render :partial => 'meta', :locals => { :f => f }%>
  
  <%= f.action :submit, :button_html => { :class => "btn btn-primary" } %>
  
<% end %>

<% content_for :page_title, "Editing #{@attachment.file.name}" %>