<div class="row-fluid">
  <div class="span12">

    <div class="page-header">
      <h1>
        Attachments
      </h1>
    </div>
    
    <p><%= link_to "Add new", new_admin_attachment_path, class: "btn btn-large btn-success" %></p>
    
    <table class="table table-striped table-bordered table-condensed" summary="List of “Lined Up” content">
      <thead>
        <tr>
          <th></th>
          <th>Name</th>
          <th>Updated</th>
          <th>Edit</th>
        </tr>
      </thead>
      <% @attachments.each do |a| %>
        <tr>
          <td><%= link_to image_tag(a.file.file_url, width: 64), admin_attachment_path(a), class: "pull-left" %></td>
          <td><%= a.file.name %></td>
          <td><%= a.updated_at %></td>
          <td><%= link_to "Edit", admin_attachment_path(a), class: "btn btn-mini btn-success" %></td>
        </li>
      <% end %>
    </table>
    
    <%= paginate @attachments %>
  
  </div>
</div>

<% content_for :page_title, "Attachments" %>